getCategoryById:
SELECT *
FROM category
WHERE id = :id;

getAllCategories:
SELECT *
FROM category;

insertCategory:
INSERT OR REPLACE
INTO category
VALUES(?, ?);

deleteCategoryById:
DELETE FROM category
WHERE id = :id;