getProductByIdProduct:
SELECT *
FROM product
WHERE idProduct = :idProduct;

getAllProducts:
SELECT *
FROM product;

getAllSortProducts:
SELECT *
FROM product
ORDER BY productName;

insertProduct:
INSERT OR REPLACE
INTO product
VALUES(?, ?, ?, ?);

deleteProductByIdProduct:
DELETE FROM product
WHERE idProduct = :idProduct;

searchByProductNameAndMaybeCategoryName:
SELECT *
FROM product
WHERE productName LIKE :productName
AND categoryNumber IN (SELECT categoryNumber
                       FROM category
                       WHERE name LIKE :categoryName);
