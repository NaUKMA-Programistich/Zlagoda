CREATE TABLE product (
  idProduct INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
  categoryNumber INTEGER NOT NULL,
  productName TEXT NOT NULL,
  characteristics TEXT NOT NULL
);

